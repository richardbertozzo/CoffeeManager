<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="2dp"
    android:paddingEnd="6dp"
    android:paddingStart="8dp">

    <android.support.v7.widget.CardView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_margin="2dp"
        app:cardCornerRadius="3dp"
        app:contentPadding="2dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/textProductName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_centerVertical="true"
                android:layout_marginStart="2dp"
                android:textSize="24sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/textProductCostPrice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/textProductName"
                android:layout_margin="2dp"
                android:gravity="center"
                android:textColor="@color/colorPrimaryDark" />

            <TextView
                android:id="@+id/textProductSalePrice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/textProductCostPrice"
                android:layout_margin="2dp"
                android:gravity="center"
                android:textColor="@color/colorPrimaryDark" />

            <ImageButton
                android:id="@+id/buttonEdit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/productSalePrice"
                android:layout_toStartOf="@+id/buttonDelete"
                android:background="?selectableItemBackground"
                android:contentDescription="@string/button_update"
                android:padding="8dp"
                android:src="@drawable/ic_edit_black_24dp" />

            <ImageButton
                android:id="@+id/buttonDelete"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_below="@id/productSalePrice"
                android:background="?selectableItemBackground"
                android:contentDescription="@string/button_delete"
                android:padding="8dp"
                android:src="@drawable/ic_delete_black_24dp" />

        </RelativeLayout>

    </android.support.v7.widget.CardView>

</LinearLayout>