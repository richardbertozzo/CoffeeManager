<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.design.widget.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbarPrdocutCrud"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="@color/colorPrimary" />
    </android.support.design.widget.AppBarLayout>

    <RelativeLayout xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="?attr/actionBarSize"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        tools:context="richard.coffeemanager.activity.ProductCrudActivity">

        <android.support.design.widget.TextInputLayout
            android:id="@+id/textInputNome"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:errorEnabled="true">

            <android.support.design.widget.TextInputEditText
                android:id="@+id/productName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/name_product" />

        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
            android:id="@+id/textInputCostPrice"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/textInputNome"
            app:errorEnabled="true">

            <faranjit.currency.edittext.CurrencyEditText
                android:id="@+id/productCostPrice"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/cost_price"
                android:inputType="numberDecimal"
                app:locale="pt_BR"
                app:showSymbol="true" />

        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
            android:id="@+id/textInputSalePrice"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/textInputCostPrice"
            app:errorEnabled="true">

            <faranjit.currency.edittext.CurrencyEditText
                android:id="@+id/productSalePrice"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/sale_price"
                android:inputType="numberDecimal"
                app:locale="pt_BR"
                app:showSymbol="true" />

        </android.support.design.widget.TextInputLayout>

        <RadioGroup xmlns:android="http://schemas.android.com/apk/res/android"
            android:id="@+id/productRadioGroupMeasure"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/textInputSalePrice"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textRadioGroupMeasure"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/measure" />

            <RadioButton
                android:id="@+id/productRadioUnity"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:checked="true"
                android:text="@string/unity" />

            <RadioButton
                android:id="@+id/productRadioPack"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/pack" />
        </RadioGroup>

